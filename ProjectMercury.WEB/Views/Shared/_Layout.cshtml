
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Choice Corporation Admin Kontrol sistemi">
    <meta name="keywords" content="seçkin,umur,seckinumur,Seckin,Umur,choice,Seçkin Umur">
    <meta name="author" content="Seçkin Umur">

    <link rel="icon" href="~/images/favicon.png" sizes="32x32">


    @*<title>Choice Admin Control Systems V.1.5</title>*@
    <title>@ViewBag.Title</title>

    <link href="~/Content/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables-responsive/dataTables.responsive.css" rel="stylesheet" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/css/buttons.bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jasny-bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/metisMenu.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select.min.js" type="text/javascript"></script>
    <script src="~/Scripts/sb-admin-2.js" type="text/javascript"></script>
    <script src="~/Content/datatables/js/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Content/datatables/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/datatables-responsive/dataTables.responsive.js" type="text/javascript"></script>
    <script src="~/Content/datatables-plugins/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/defaults-tr_TR.js" type="text/javascript"></script>
    <script src="~/Scripts/buttons.print.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/buttons.bootstrap.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/buttons.colVis.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/buttons.foundation.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/buttons.html5.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/buttons.jqueryui.min.js"  type="text/javascript"></script>
    <script src="~/Scripts/jszip.min.js" type="text/javascript"></script>
    <script src="~/Scripts/pdfmake.min.js" type="text/javascript"></script>
    <script src="~/Scripts/vfs_fonts.js" type="text/javascript"></script>
   
    
</head>

<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Choice Admin Control Systems V.1.5</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="~/Admin/Logoff"><i class="fa fa-sign-out fa-fw"></i> Oturumu Kapat</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li>
                            <a href="~/Admin/Admin"><i class="fa fa-dashboard fa-fw "></i> Ana Ekran</a>
                        </li>
                        <li>
                            <a href="~/Admin/Ayarlar"><i class="fa fa-gear fa-fw "></i> Ayarlar</a>
                        </li>
                        <li>
                            <a href="~/Product/Kategori"><i class="fa fa-th-list"></i> Kategori İşlemleri</a>
                        </li>
                        <li>
                            <a href="~/Product/AltKategoriler"><i class="fa fa-indent"></i> Alt Kategori İşlemleri</a>
                        </li>
                        <li>
                            <a href="~/Product/UrunKategori"><i class="fa fa-list"></i> Ürün Kategori İşlemleri</a>
                        </li>
                        <li>
                            <a href="~/Product/Marka"><i class="fa fa-list"></i> Marka İşlemleri</a>
                        </li>
                        <li>
                            <a href="~/Product/UrunEkle"><i class="fa fa-shopping-cart"></i> Ürün ekle</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-th-list fa-fw"></i> Kategoriler<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                @{
                                    foreach (var item in ProjectMercury.DAL.Repository.KategoriRepo.Kategoriler())
                                    {
                                        <li>
                                            <a href="~/Product/KategoriListele/@item.KategoriID"><i class="fa fa-database"></i> @item.KategoriAdi</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Page Content -->

        @RenderBody()

        <!-- /#page-wrapper -->

    </div>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                lengthChange: false,
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'pdf', 'print']
            });
        });
    </script>
</body>
</html>